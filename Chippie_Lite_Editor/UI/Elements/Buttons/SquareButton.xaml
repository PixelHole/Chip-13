<UserControl x:Class="Chippie_Lite_WPF.UI.Elements.SquareButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="Transparent"
             mc:Ignorable="d">
    <Grid Name="Body" MouseEnter="Body_OnMouseEnter" MouseLeave="Body_OnMouseLeave"
          MouseDown="Body_OnMouseDown" MouseUp="Body_OnMouseUp">
        
        <TextBlock x:Name="TextDisplay" Foreground="{StaticResource White}" Margin="4"
               FontFamily="{StaticResource TextFontAlt}" FontSize="18"
               VerticalAlignment="Center" HorizontalAlignment="Center"/>
        
        <Image x:Name="ImageDisplay" Margin="4" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
        
    </Grid>
</UserControl>
