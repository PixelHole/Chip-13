<Window x:Class="Chippie_Lite_WPF.UI.Elements.ErrorBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:elements="clr-namespace:Chippie_Lite_WPF.UI.Elements"
             mc:Ignorable="d"
             AllowsTransparency="True"
             WindowStyle="None"
             ResizeMode="NoResize"
             Background="{StaticResource 'Dark Blue'}"
             MinHeight="64" MinWidth="64"
             MaxWidth="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0" Background="{StaticResource Red}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="32"/>
            </Grid.ColumnDefinitions>
            
            <Rectangle Fill="{StaticResource Red}" 
                       MouseDown="DragBox_OnMouseDown"/>
            
            <Label x:Name="TitleLabel" Grid.Column="0" 
                   FontFamily="{StaticResource TextFontAlt}" FontSize="16"
                   Foreground="{StaticResource White}" Background="Transparent"
                   Focusable="False" IsHitTestVisible="False"/>
            
            <elements:SquareButton Grid.Column="1" Click="CloseBtn_OnClick" Width="32" Height="32"
                                   Icon="../../../Resources/Images/Icons/strike_invert.png"
                                BackgroundHoverColor="{StaticResource Pink}" 
                                BackgroundClickColor="{StaticResource Bisque}"/>
            
        </Grid>
        
        <Border Grid.Row="1" BorderBrush="{StaticResource Red}" BorderThickness="4, 0, 4, 4">
            <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto"
                          Background="Transparent" Style="{StaticResource StyledScrollViewer}">
                
                <TextBlock x:Name="MessageBox" Background="Transparent" Foreground="{StaticResource White}"
                           FontFamily="{StaticResource TextFont}" FontSize="16" Margin="4" 
                           TextWrapping="WrapWithOverflow"/>
                
            </ScrollViewer>
            
        </Border>
        
    </Grid>
</Window>
