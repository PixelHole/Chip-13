<UserControl x:Class="Chippie_Lite_WPF.UI.Elements.MemoryViewLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Chippie_Lite_WPF.UI.Elements"
             mc:Ignorable="d"
             Background="Transparent">
    <Border BorderThickness="0, 0, 4, 4" BorderBrush="{StaticResource 'Deep Purple'}">
        <TextBlock x:Name="DisplayText" FontFamily="{StaticResource TextFontAlt}" FontSize="18"
                   Foreground="{StaticResource 'Light Grey'}" Background="Transparent"
                   VerticalAlignment="Center" HorizontalAlignment="Left" Margin="6"/>
    </Border>
</UserControl>
