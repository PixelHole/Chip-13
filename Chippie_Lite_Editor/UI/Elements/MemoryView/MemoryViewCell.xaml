<UserControl x:Class="Chippie_Lite_WPF.UI.Elements.MemoryViewCell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Background="Transparent"
             MinHeight="48" MinWidth="128">
    <Border BorderBrush="{StaticResource 'Deep Purple'}" BorderThickness="0, 0, 4, 4">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <TextBox x:Name="InputBox" Grid.Row="0" Margin="4, 0, 0, 0" VerticalAlignment="Center" 
                     FontSize="16" FontFamily="{StaticResource TextFontAlt}"
                     Foreground="{StaticResource White}" Background="Transparent"
                     BorderThickness="0" BorderBrush="Transparent"
                     Visibility="Visible" 
                     LostFocus="InputBox_OnLostFocus" KeyDown="InputBox_OnKeyDown"
                     TextChanged="InputBox_OnTextChanged"/>
            
            <TextBlock x:Name="AddressBlock" Grid.Row="1" Margin="4, 0, 0, 0" VerticalAlignment="Center" 
                       Text="Memory" FontSize="16" FontFamily="{StaticResource TextFontAlt}"
                       Foreground="{StaticResource 'Weird Grey'}" Background="Transparent"/>
        </Grid>
    </Border>
</UserControl>
