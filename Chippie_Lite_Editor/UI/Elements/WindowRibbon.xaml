<UserControl x:Class="Chippie_Lite_WPF.UI.Elements.WindowRibbon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:elements="clr-namespace:Chippie_Lite_WPF.UI.Elements"
             mc:Ignorable="d"
             Background="Transparent"
             Height="32"
             Width="96"
             d:DesignHeight="32" d:DesignWidth="96">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <elements:SquareButton x:Name="MinimizeBtn" Label="" Width="32" Click="MinimizeBtn_OnClick" ToolTip="Minimize"
                                Icon="../../Resources/Images/Icons/Underline.png"
                                BackgroundHoverColor="{StaticResource 'Dark Green'}"/>
            <elements:SquareButton x:Name="FullscreenBtn" Label="" Width="32" Click="FullscreenBtn_OnClick" ToolTip="Fullscreen"
                                Icon="../../Resources/Images/Icons/square.png"
                                BackgroundHoverColor="{StaticResource Brown}"/>
            <elements:SquareButton x:Name="CloseBtn" Label="" Width="32" Click="CloseBtn_OnClick" ToolTip="Close"
                                Icon="../../Resources/Images/Icons/strike_invert.png"
                                BackgroundHoverColor="{StaticResource 'Red'}"/>
        </StackPanel>
    </Grid>
</UserControl>
