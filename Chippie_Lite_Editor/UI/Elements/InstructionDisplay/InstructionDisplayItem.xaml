<UserControl x:Class="Chippie_Lite_WPF.UI.Elements.InstructionDisplayItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Background="Transparent"
             MinHeight="16" d:DesignWidth="256">
    <Border BorderThickness="0, 0, 0, 4" BorderBrush="{StaticResource 'Deep Purple'}"
            Background="Transparent">
        <Grid x:Name="Body">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="32"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        
            <Label x:Name="LineLabel" FontFamily="{StaticResource TextFont}" FontSize="14" 
                   Foreground="{StaticResource White}"
                   HorizontalContentAlignment="Right" VerticalContentAlignment="Center"
                   Margin="0, 0, 4, 0"/>
        
            <TextBox x:Name="InstructionBox" Grid.Column="1" FontFamily="{StaticResource TextFont}" FontSize="14"
                     Foreground="{StaticResource White}" Background="Transparent" IsEnabled="False" 
                     BorderBrush="Transparent" BorderThickness="0" TextWrapping="WrapWithOverflow"
                     HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
        
        </Grid>
    </Border>
</UserControl>
