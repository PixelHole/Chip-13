<UserControl x:Class="Chippie_Lite_WPF.UI.Windows.Help.DocumentListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Chippie_Lite_WPF.UI.Windows.Help"
             mc:Ignorable="d"
             Background="Transparent"
             MinWidth="128" MinHeight="32">
    <StackPanel>
        <Grid x:Name="Body"
              MouseEnter="Body_OnMouseEnter" MouseLeave="Body_OnMouseLeave"
              MouseDown="Body_OnMouseDown" MouseUp="Body_OnMouseUp">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="32"/>
                <ColumnDefinition Width="32"/>
                <ColumnDefinition MaxWidth="256"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock x:Name="ExpandIcon" Grid.Column="0" Margin="4"
                       FontSize="24" FontFamily="{StaticResource Monogram}" Text="+"
                       Foreground="{StaticResource White}"
                       VerticalAlignment="Center"/>
                
            <Image x:Name="Icon" Grid.Column="1" Margin="4" Source="{StaticResource FolderIcon}"/>
                
            <TextBlock x:Name="TitleBlock" Grid.Column="2" Margin="4, 0, 0, 0" 
                       FontSize="24" FontFamily="{StaticResource Monogram}"
                       Foreground="{StaticResource White}"
                       VerticalAlignment="Center" TextWrapping="Wrap"/>
        </Grid>
        
        <StackPanel x:Name="SubdirectoriesPanel" Margin="16, 0, 0, 0"/>
        
    </StackPanel>
</UserControl>
