<Window x:Class="Chippie_Lite_WPF.UI.Windows.Help.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Chippie_Lite_WPF.UI.Help"
        xmlns:elements="clr-namespace:Chippie_Lite_WPF.UI.Elements"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="{StaticResource 'Dark Blue'}"
        Title="HelpWindow" Height="500" Width="800">
    <Border BorderBrush="{StaticResource 'Dark Blue'}" BorderThickness="2">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
        
            <Rectangle x:Name="DragBox" Fill="{StaticResource 'Deep Purple'}" MouseDown="DragBox_OnMouseDown"/>
        
            <elements:WindowRibbon Grid.Row="0" HorizontalAlignment="Right"/>
        
            <Border Grid.Row="1" BorderThickness="4, 0, 4, 4" BorderBrush="{StaticResource 'Deep Purple'}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MaxWidth="256"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
        
                    <Border BorderThickness="0, 0, 4, 0" BorderBrush="{StaticResource 'Deep Purple'}">
                        <ScrollViewer Style="{StaticResource StyledScrollViewer}" 
                                      HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Auto">
                            <StackPanel x:Name="ContentList"/>
                        </ScrollViewer>
                    </Border>
                    <Grid Name="ContentPresenterGrid" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="32"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
            
                        <Border BorderThickness="0, 0, 0, 4" BorderBrush="{StaticResource 'Deep Purple'}">
                            <ScrollViewer Name="PageTabsScrollViewer" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled">
                                <StackPanel x:Name="DocumentTabsList" Orientation="Horizontal"/>
                            </ScrollViewer>
                        </Border>
            
                        <Grid Grid.Row="1" Margin="8, 0, 0, 0">
                            
                            <Grid.RowDefinitions>
                                <RowDefinition Height="64"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock x:Name="TitleBlock" MinHeight="48"
                                       VerticalAlignment="Center" 
                                       Foreground="{StaticResource White}"
                                       FontFamily="{StaticResource Monogram}" FontSize="48"
                                       Text="Title"/>
                            <ScrollViewer x:Name="BodyScrollViewer" Grid.Row="1" Style="{StaticResource StyledScrollViewer}"
                                          HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto"
                                          MouseWheel="BodyScrollViewer_OnMouseWheel">
                                <!-- <local:FormattedTextDisplay x:Name="BodyBlock" -->
                                <!--            Foreground="{StaticResource White}" -->
                                <!--            FontFamily="{StaticResource Monogram}" FontSize="24" -->
                                <!--            Text="body text"/> -->
                                <TextBlock x:Name="BodyBlock" TextWrapping="WrapWithOverflow"
                                           Foreground="{StaticResource 'Light Grey'}"
                                           FontFamily="{StaticResource Monogram}" FontSize="24"
                                           Text="body text"/>
                            </ScrollViewer>
                        </Grid>
            
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>