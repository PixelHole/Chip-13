<Window x:Class="Chippie_Lite_WPF.UI.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:elements="clr-namespace:Chippie_Lite_WPF.UI.Elements"
        xmlns:windows="clr-namespace:Chippie_Lite_WPF.UI.Windows"
        mc:Ignorable="d"
        AllowsTransparency="True"
        Background="Transparent"
        SnapsToDevicePixels="True"
        Title="MainWindow" Height="600" Width="900"
        KeyDown="MainWindow_OnKeyDown"
        Closing="MainWindow_OnClosing">
    
    <Grid Background="{StaticResource 'Dark Blue'}">
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Grid x:Name="Toolbar" Grid.Row="0">
            <Rectangle x:Name="DragBox" Fill="{StaticResource 'Deep Purple'}" MouseDown="DragBox_OnMouseDown"/>
            
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <elements:SquareButton x:Name="ToolbarLogoBtn"  Click="ToolbarLogoBtn_OnClick" 
                                       Icon="./../../Resources/Images/Icons/logo.png"
                                       BackgroundHoverColor="{StaticResource Red}"
                                       BackgroundClickColor="{StaticResource Pink}"/>
                <elements:SquareButton x:Name="ToolbarNewBtn" Click="ToolbarNewBtn_OnClick"
                                       Icon="../../Resources/Images/Icons/File.png"
                                       BackgroundHoverColor="{StaticResource Red}"
                                       BackgroundClickColor="{StaticResource Pink}"/>
                <elements:SquareButton x:Name="ToolbarOpenBtn" Click="ToolbarOpenBtn_OnClick"
                                       Icon="../../Resources/Images/Icons/file2.png"
                                       BackgroundHoverColor="{StaticResource Red}"
                                       BackgroundClickColor="{StaticResource Pink}"/>
                <elements:SquareButton x:Name="ToolbarSaveBtn" Click="ToolbarSaveBtn_OnClick"
                                       Icon="../../Resources/Images/Icons/Floppy.png"
                                       BackgroundHoverColor="{StaticResource Red}"
                                       BackgroundClickColor="{StaticResource Pink}"/>
                <elements:SquareButton x:Name="ToolbarSaveAsBtn" Click="ToolbarSaveAsBtn_OnClick"
                                       Icon="../../Resources/Images/Icons/SaveAs.png"
                                       BackgroundHoverColor="{StaticResource Red}"
                                       BackgroundClickColor="{StaticResource Pink}"/>
                <elements:SquareButton x:Name="ToolbarHelpBtn" Click="ToolbarHelpBtn_OnClick"
                                       Icon="../../Resources/Images/Icons/questionMark.png"
                                       BackgroundHoverColor="{StaticResource Red}"
                                       BackgroundClickColor="{StaticResource Pink}"/>
                <Rectangle Width="32"/>
                <elements:ToggleButton x:Name="CodeWindowBtn" OnSelected="CodeWindowBtn_OnOnSelected"
                                       Icon="../../../Resources/Images/Icons/brackets.png" 
                                       UnselectedHoverColor="{StaticResource Red}" 
                                       UnselectedClickColor="{StaticResource Pink}"
                                       SelectedDefaultColor="{StaticResource Red}"
                                       SelectedHoverColor="{StaticResource Pink}"
                                       SelectedClickColor="{StaticResource Bisque}"
                                       Selected="True"/>
                <elements:ToggleButton x:Name="MemoryWindowBtn" OnSelected="MemoryWindowBtn_OnOnSelected"
                                       Icon="../../../Resources/Images/Icons/FourSquares.png"
                                       UnselectedHoverColor="{StaticResource Red}" 
                                       UnselectedClickColor="{StaticResource Pink}"
                                       SelectedDefaultColor="{StaticResource Red}"
                                       SelectedHoverColor="{StaticResource Pink}"
                                       SelectedClickColor="{StaticResource Bisque}"
                                       Selected="False"/>
                <elements:ToggleButton x:Name="RunWindowBtn" OnSelected="RunWindowBtn_OnOnSelected"
                                       Icon="../../../Resources/Images/Icons/Bug.png" 
                                       UnselectedHoverColor="{StaticResource Red}" 
                                       UnselectedClickColor="{StaticResource Pink}"
                                       SelectedDefaultColor="{StaticResource Red}"
                                       SelectedHoverColor="{StaticResource Pink}"
                                       SelectedClickColor="{StaticResource Bisque}"
                                       Selected="False"/>
                <!-- <elements:ToggleButton x:Name="ConsoleWindowBtn" OnSelected="ConsoleWindowBtn_OnOnSelected" -->
                <!--                        Icon="../../../Resources/Images/Icons/BigI.png"  -->
                <!--                        UnselectedHoverColor="{StaticResource Red}"  -->
                <!--                        UnselectedClickColor="{StaticResource Pink}" -->
                <!--                        SelectedDefaultColor="{StaticResource Red}" -->
                <!--                        SelectedHoverColor="{StaticResource Pink}" -->
                <!--                        SelectedClickColor="{StaticResource Bisque}" -->
                <!--                        Selected="False"/> -->
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                
                <elements:SquareButton x:Name="RunBtn" Click="RunBtn_OnClick"
                                       Icon="./../../Resources/Images/Icons/play.png"
                                       BackgroundHoverColor="{StaticResource 'Dark Green'}"/>
                
                <elements:SquareButton x:Name="RunToEndBtn" Click="RunToEndBtn_OnClick" Visibility="Collapsed"
                                       Icon="./../../Resources/Images/Icons/FastForward.png"
                                       BackgroundHoverColor="{StaticResource 'Dark Green'}"/>
                
                <elements:SquareButton x:Name="SingleStepBtn" Click="SingleStepBtn_OnClick" Visibility="Collapsed"
                                       Icon="./../../Resources/Images/Icons/RightArrow.png"
                                       BackgroundHoverColor="{StaticResource 'Dark Green'}"/>
                
                <elements:SquareButton x:Name="RestartBtn"  Click="RestartBtn_OnClick" Visibility="Collapsed"
                                       Icon="./../../Resources/Images/Icons/restart.png"
                                       BackgroundHoverColor="{StaticResource 'Dark Green'}"/>
                
                <elements:SquareButton x:Name="StopBtn"  Click="StopBtn_OnClick" Visibility="Collapsed"
                                       Icon="./../../Resources/Images/Icons/pause.png"
                                       BackgroundHoverColor="{StaticResource 'Red'}" />
                
                <Separator Width="64" Background="Transparent"/>
                
                <elements:WindowRibbon x:Name="WindowRibbons"/>
                
            </StackPanel>
            
        </Grid>
        
        <windows:DevelopmentArea Grid.Row="1" x:Name="DevArea" x:FieldModifier="public"/>
        
    </Grid>
</Window>