<UserControl x:Class="Chippie_Lite_WPF.UI.Windows.Development.SerialIOConsole"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:syntax="clr-namespace:UI.SyntaxBox;assembly=UI.SyntaxBox"
             xmlns:elements="clr-namespace:Chippie_Lite_WPF.UI.Elements"
             mc:Ignorable="d"
             Background="Transparent"
             SnapsToDevicePixels="True"
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="48"/>
        </Grid.RowDefinitions>
        
        <Border BorderThickness="4" BorderBrush="{StaticResource 'Deep Purple'}">
            <ScrollViewer Style="{StaticResource StyledScrollViewer}"
                          Background="Transparent" BorderBrush="Transparent" BorderThickness="0"
                          VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                
                <TextBox x:Name="IOConsole" FontSize="16" FontFamily="{StaticResource TextFont}" IsEnabled="False"
                         BorderBrush="Transparent" Foreground="{StaticResource White}"
                         BorderThickness="0" Background="Transparent"
                         syntax:SyntaxBox.Enable="True" syntax:SyntaxBox.ShowLineNumbers="False"
                         syntax:SyntaxBox.AutoIndent="False" syntax:SyntaxBox.ExpandTabs="False">
                    <syntax:SyntaxBox.SyntaxDrivers>
                        <syntax:SyntaxConfig>
                            <syntax:KeywordRule Foreground="{StaticResource Pink}" Keywords="@CHIP-13"/>
                            <syntax:KeywordRule Foreground="{StaticResource 'Faded Purple'}" Keywords="@USER"/>
                        </syntax:SyntaxConfig>
                    </syntax:SyntaxBox.SyntaxDrivers>
                </TextBox>
                
            </ScrollViewer>
        </Border>
        
        <Grid Grid.Row="1" Margin="0, 4, 0, 0" >
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <Border BorderBrush="{StaticResource 'Deep Purple'}" BorderThickness="4"
                    SnapsToDevicePixels="True">
                <TextBox x:Name="InputBox" Grid.Row="1" BorderThickness="0" BorderBrush="Transparent" IsEnabled="False"
                         Background="Transparent" Foreground="{StaticResource White}" 
                         SelectionBrush="{StaticResource Pink}" CaretBrush="{StaticResource White}" 
                         SelectionTextBrush="{StaticResource Bisque}"
                         FontFamily="{StaticResource TextFont}" FontSize="16"
                         VerticalContentAlignment="Center" KeyDown="InputBox_OnKeyDown"/>
            </Border>
            
            <elements:SquareButton x:Name="SubmitBtn" Grid.Column="1" Label="Submit" Background="{StaticResource 'Deep Purple'}"
                                   BackgroundHoverColor="{StaticResource Red}"
                                   BackgroundClickColor="{StaticResource Pink}"
                                   Click="SubmitBtn_OnClick"/>
            
        </Grid>
        
    </Grid>
</UserControl>
