<UserControl x:Class="wpf_Console.ConsoleGlyph"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:wpf_Console"
             mc:Ignorable="d"
             d:DesignHeight="64" d:DesignWidth="32">
    <Grid x:Name="Body" RenderOptions.EdgeMode="Aliased" >
        <TextBlock x:Name="GlyphText" VerticalAlignment="Center" HorizontalAlignment="Center"
                   FontSize="16" FontFamily="{StaticResource Monogram}"
                   TextOptions.TextRenderingMode="Aliased"/>
    </Grid>
</UserControl>
