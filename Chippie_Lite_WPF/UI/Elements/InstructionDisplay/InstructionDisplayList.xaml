<UserControl x:Class="Chippie_Lite_WPF.UI.Elements.InstructionDisplayList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Chippie_Lite_WPF.UI.Elements"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="200">
    <Grid>
        <ScrollViewer x:Name="ScrollView" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"
                      Style="{StaticResource StyledScrollViewer}">
            <StackPanel x:Name="InstructionList" Background="Transparent" Orientation="Vertical"/>
        </ScrollViewer>
    </Grid>
</UserControl>
