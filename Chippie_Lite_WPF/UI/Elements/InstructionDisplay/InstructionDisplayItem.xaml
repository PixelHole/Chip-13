<UserControl x:Class="Chippie_Lite_WPF.UI.Elements.InstructionDisplay.InstructionDisplayItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Chippie_Lite_WPF.UI.Elements.InstructionDisplay"
             mc:Ignorable="d"
             Background="Transparent"
             MinHeight="32" d:DesignWidth="256">
    <Grid x:Name="Body">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        
        <Label x:Name="LineLabel" FontFamily="{StaticResource TextFont}" FontSize="14" 
               Foreground="{StaticResource 'Weird Grey'}"
               HorizontalContentAlignment="Right" VerticalContentAlignment="Center"
               Margin="0, 0, 4, 0"/>
        
        <TextBox x:Name="InstructionBox" Grid.Column="1" FontFamily="{StaticResource TextFont}" FontSize="16"
               Foreground="{StaticResource White}" Background="Transparent" 
               BorderBrush="Transparent" BorderThickness="0"
               HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
        
    </Grid>
</UserControl>
