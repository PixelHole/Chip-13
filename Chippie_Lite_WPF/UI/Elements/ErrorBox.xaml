<UserControl x:Class="Chippie_Lite_WPF.UI.Elements.ErrorBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Chippie_Lite_WPF.UI.Elements"
             xmlns:syntax="clr-namespace:UI.SyntaxBox;assembly=UI.SyntaxBox"
             mc:Ignorable="d"
             MaxWidth="400" MaxHeight="300">
    <Grid Background="{StaticResource 'Dark Blue'}">
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0" Background="{StaticResource Red}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="32"/>
            </Grid.ColumnDefinitions>
            
            <Rectangle Name="DragBox" Fill="{StaticResource Red}" MouseDown="DragBox_OnMouseDown"/>
            
            <Label x:Name="TitleLabel" Grid.Column="0" 
                   FontFamily="{StaticResource TextFontAlt}" FontSize="16"
                   Foreground="{StaticResource White}" Background="Transparent"
                   Focusable="False" IsHitTestVisible="False"/>
            
            <local:SquareButton x:Name="CloseBtn" Grid.Column="1" Label="X" Click="CloseBtn_OnClick" Width="32" Height="32"
                                BackgroundHoverColor="{StaticResource Pink}" 
                                BackgroundClickColor="{StaticResource Bisque}"/>
            
        </Grid>
        
        <Border Grid.Row="1" BorderBrush="{StaticResource Red}" BorderThickness="2, 0, 2, 2">
            <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto"
                          Background="Transparent" Style="{StaticResource StyledScrollViewer}">
                
                <TextBlock x:Name="MessageBox" Background="Transparent" Foreground="{StaticResource White}"
                           FontFamily="{StaticResource TextFont}" FontSize="16" Margin="4" TextWrapping="WrapWithOverflow"
                           >
                    <!-- <syntax:SyntaxBox.SyntaxDrivers> -->
                    <!--     <syntax:SyntaxConfig> -->
                    <!--         <syntax:KeywordRule Keywords="Register, Registers, Number" Foreground="{StaticResource Orange}"/> -->
                    <!--     </syntax:SyntaxConfig> -->
                    <!-- </syntax:SyntaxBox.SyntaxDrivers> -->
                </TextBlock>
                
            </ScrollViewer>
            
        </Border>
        
    </Grid>
</UserControl>
