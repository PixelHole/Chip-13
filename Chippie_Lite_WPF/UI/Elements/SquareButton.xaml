<UserControl x:Class="Chippie_Lite_WPF.UI.Elements.SquareButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Chippie_Lite_WPF.UI.Elements"
             mc:Ignorable="d"
             d:DesignHeight="32" d:DesignWidth="32">
    <Grid Name="Body" Background="#1d2b53" 
          MouseEnter="Body_OnMouseEnter" MouseLeave="Body_OnMouseLeave"
          MouseDown="Body_OnMouseDown" MouseUp="Body_OnMouseUp">
        <Label x:Name="TextDisplay" Foreground="#fff1e8" Content="File" 
               FontFamily="{StaticResource TextFontAlt}"
               VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
               VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Image x:Name="ImageDisplay" Margin="2"/>
    </Grid>
</UserControl>
