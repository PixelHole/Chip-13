<UserControl x:Class="Chippie_Lite_WPF.UI.Elements.ToggleButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Chippie_Lite_WPF.UI.Elements"
             mc:Ignorable="d"
             Background="Transparent">
    <Grid Name="Body" MouseEnter="Body_OnMouseEnter" MouseLeave="Body_OnMouseLeave"
          MouseDown="Body_OnMouseDown" MouseUp="Body_OnMouseUp">
        
        <Label x:Name="TextDisplay" Foreground="{StaticResource White}" Margin="0"
               FontFamily="{StaticResource TextFontAlt}" FontSize="16" Content=""
               VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
               VerticalAlignment="Center" HorizontalAlignment="Center"/>
        
        <Image x:Name="ImageDisplay" Margin="4" RenderOptions.BitmapScalingMode="NearestNeighbor"
               VerticalAlignment="Center" HorizontalAlignment="Center"/>
        
    </Grid>
</UserControl>
