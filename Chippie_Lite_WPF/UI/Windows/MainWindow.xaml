<Window x:Class="Chippie_Lite_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chippie_Lite_WPF"
        xmlns:elements="clr-namespace:Chippie_Lite_WPF.UI.Elements"
        mc:Ignorable="d"
        AllowsTransparency="True"
        Background="Transparent"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="{StaticResource 'Dark Blue'}">
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Grid x:Name="Toolbar">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <elements:SquareButton x:Name="ToolbarLogoBtn" Label="" Click="ToolbarLogoBtn_OnClick" Icon="{StaticResource LogoNegativeWhiteMed}"/>
                <elements:SquareButton x:Name="ToolbarFileBtn" Label="File" Click="ToolbarFileBtn_OnClick"/>
                <!-- <elements:SquareButton x:Name="ToolbarRunBtn" Label="Run" Click="ToolbarRunBtn_OnClick"/> -->
                <elements:SquareButton x:Name="ToolbarHelpBtn" Label="Help" Click="ToolbarHelpBtn_OnClick"/>
            </StackPanel>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <elements:SquareButton x:Name="RunBtn" Label="Run" BackgroundHoverColor="{StaticResource 'Dark Green'}"/>
                <elements:SquareButton x:Name="StopBtn" Label="Stop" BackgroundHoverColor="{StaticResource 'Red'}" Visibility="Collapsed"/>
                <Separator Width="64" Background="Transparent"/>
                <elements:WindowRibbon x:Name="WindowRibbons" Minimize="WindowRibbon_OnMinimize" Fullscreen="WindowRibbon_OnFullscreen" Close="WindowRibbon_OnClose"/>
            </StackPanel>
            
            <Border Grid.ColumnSpan="2" Grid.Column="0" BorderBrush="#83769c" BorderThickness="0, 0, 0, 2"/>
            
        </Grid>
        <Label x:Name="Label" Grid.Row="1"/>
        
        <Grid Grid.Row="1" >
        </Grid>
        
    </Grid>
</Window>
