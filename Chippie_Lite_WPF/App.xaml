<Application x:Class="Chippie_Lite_WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Chippie_Lite_WPF"
             StartupUri="/UI/Windows/MainWindow.xaml"
             Startup="App_OnStartup">
    <Application.Resources>
        <FontFamily x:Key="TextFont">/Resources/Fonts/#Kenney Mini Regular</FontFamily>
        <FontFamily x:Key="TextFontAlt">/Resources/Fonts/#Kenney Mini Square Regular</FontFamily>
        <Brush x:Key="Black">#000000</Brush>
        <Brush x:Key="Dark Blue">#1d2b53</Brush>
        <Brush x:Key="Deep Purple">#7e2553</Brush>
        <Brush x:Key="Dark Green">#008751</Brush>
        <Brush x:Key="Brown">#ab5236</Brush>
        <Brush x:Key="Weird Grey">#5f574f</Brush>
        <Brush x:Key="Light Grey">#c2c3c7</Brush>
        <Brush x:Key="White">#fff1e8</Brush>
        <Brush x:Key="Red">#ff004d</Brush>
        <Brush x:Key="Orange">#ffa300</Brush>
        <Brush x:Key="Yellow">#ffec27</Brush>
        <Brush x:Key="Green">#00e436</Brush>
        <Brush x:Key="Light Blue">#29adff</Brush>
        <Brush x:Key="Faded Purple">#83769c</Brush>
        <Brush x:Key="Pink">#ff77a8</Brush>
        <Brush x:Key="Bisque">#ffccaa</Brush>
        <ImageSource x:Key="LogoWhiteBig">Resources\Images\logo32.png</ImageSource>
        <ImageSource x:Key="LogoWhiteMed">Resources\Images\logo16.png</ImageSource>
        <ImageSource x:Key="LogoWhiteSml">Resources\Images\logo8.png</ImageSource>
        
        <ImageSource x:Key="ThumbUpIcon" >Resources/Images/Icons/ThumbUp.png</ImageSource>
        <ImageSource x:Key="ThumbDownIcon">Resources/Images/Icons/ThumbDown.png</ImageSource>

        <Style x:Key="StyledScrollBarUpBtn" TargetType="{x:Type RepeatButton}">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="Focusable" Value="false"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RepeatButton}">
                        <Grid Name="Border" Margin="0" Background="{StaticResource 'Faded Purple'}">
                            <Image HorizontalAlignment="Center" VerticalAlignment="Center" Source="{StaticResource ThumbUpIcon}"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter TargetName="Border" Property="Background"
                                        Value="{StaticResource Pink}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Foreground"
                                        Value="{StaticResource 'Light Grey'}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="StyledScrollBarDownBtn" TargetType="{x:Type RepeatButton}">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="Focusable" Value="false"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RepeatButton}">
                        <Grid Name="Border" Margin="0" Background="{StaticResource 'Faded Purple'}">
                            <Image HorizontalAlignment="Center" VerticalAlignment="Center" Source="{StaticResource ThumbDownIcon}"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter TargetName="Border" Property="Background"
                                        Value="{StaticResource Pink}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Foreground"
                                        Value="{StaticResource 'Light Grey'}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="StyledScrollBarThumb" TargetType="{x:Type Thumb}">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="IsTabStop" Value="false"/>
            <Setter Property="Focusable" Value="false"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Grid Background="{StaticResource Pink}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ControlTemplate x:Key="StyledVerticalScrollBar"
                         TargetType="{x:Type ScrollBar}">
            <Grid Background="{StaticResource 'Faded Purple'}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="0.00001*"/>
                    <RowDefinition Height="16"/>
                </Grid.RowDefinitions>
                
                <RepeatButton Grid.Row="0" Style="{StaticResource StyledScrollBarUpBtn}" Height="16" Width="16"
                    Command="ScrollBar.LineUpCommand" Content="M 0 4 L 8 4 L 4 0 Z" />
                
                <Track Name="PART_Track" Grid.Row="1" IsDirectionReversed="true">
                    <Track.Thumb>
                        <Thumb Style="{StaticResource StyledScrollBarThumb}" Margin="0"
                            Background="{StaticResource 'Faded Purple'}" BorderBrush="Transparent" />
                    </Track.Thumb>
                </Track>
                
                <RepeatButton Grid.Row="2" Style="{StaticResource StyledScrollBarDownBtn}" Height="16" Width="16"
                    Command="ScrollBar.LineDownCommand" Content="M 0 0 L 4 4 L 8 0 Z"/>
            </Grid>
        </ControlTemplate>
        
        <Style x:Key="{x:Type ScrollBar}" TargetType="{x:Type ScrollBar}">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Style.Triggers>
                <Trigger Property="Orientation" Value="Vertical">
                    <Setter Property="Width" Value="16"/>
                    <Setter Property="Height" Value="Auto" />
                    <Setter Property="Template"
                            Value="{StaticResource StyledVerticalScrollBar}" />
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="StyledScrollViewer" TargetType="{x:Type ScrollViewer}">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollViewer}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <ScrollContentPresenter Grid.Column="0"/>

                            <ScrollBar Grid.Column="1" Name="PART_VerticalScrollBar"
                                       Value="{TemplateBinding VerticalOffset}"
                                       Maximum="{TemplateBinding ScrollableHeight}"
                                       ViewportSize="{TemplateBinding ViewportHeight}"
                                       Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
    </Application.Resources>
</Application>